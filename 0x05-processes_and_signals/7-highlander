#!/usr/bin/env bash
# This script displays "To infinity and beyond" indefinitely and
# intercepts SIGTERM signals to print a specific message.

# Define the trap: when SIGTERM is received, print the message.
# We use the signal name SIGTERM (or 15).
trap "echo 'I am invincible!!!'" SIGTERM

# The infinite loop
while true
do
    echo "To infinity and beyond"
    sleep 2
done
